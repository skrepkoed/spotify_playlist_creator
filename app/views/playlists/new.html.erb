<h1>Playlists#new,</h1>
<p>Find me in app/views/playlists/new.html.slim
</p>

<div class="d-flex align-items-start">
  <div class="nav flex-column nav-pills me-3" id="v-pills-tab" role="tablist" aria-orientation="vertical">
    <a class="nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">Home</a>
    <a class="nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">Profile</a>  
    </div>


  <div class="tab-content" id="v-pills-tabContent">
          <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
              <div class="container" >
                <div class="row row-cols-2">
                 <div class="col-4" style="min-width: 350px;">
                  
                    <%= form_with model:@playlist, url:'/playlists/albums', method: 'post',local: true do |form| %>
                    <%= form.label :playlist_name, 'Name' ,class:"form-label" %>
                    <%= form.text_field :playlist_name, class:"form-control"%>
                    <br>

                     <%=form.label :number_artists, 'Number of artists in your playlist',class:"form-label"%>
                     <%=form.text_field :number_artists, class:"form-control"%>
                     <br>
                     
                     <%=form.label :albums, 'Number of albums in your playlist',class:"form-label"%>
                     <%=form.text_field :number_albums,class:"form-control" %>
                     <br>
                     
                     <%= form.label :songs, 'Number of tracks in your playlist',class:"form-label"%>
                     <%=form.text_field :number_songs,class:"form-control" %>
                     <br>

                     <%=form.label :search, 'Search with genres', class:"form-label" %>
                     <%= form.search_field(:search, :class=>'form-control me-2')%>
                      <br>
                      <%unless @result%>
                        <%= submit_tag 'Create new Playlist',:class=>'btn btn-primary'%>
                        <%else%>
                      <%= submit_tag 'New search',:class=>'btn btn-primary'%>
                      <%= submit_tag 'Create new Playlist',:class=>'btn btn-primary'%>
                      <%end%>
                    
                       <%if @result==:empty%>
                          
                     
                        <h3>Sorry,there isn`t such genre</h3>
                        <%end%>
                    </div>

                   
                 <div class="col-8 overflow-auto" style="height:500px;" >
                  
                    <ul class="list-group ">
                    <%= form.collection_check_boxes :spotify_ids, @artists, :name_with_id, :name_with_genres do |b| %>
                     
                      <li class="list-group-item">
                        <div class="form-check">
                          <%= b.label(:"data-value" => b.value, :class=>"form-check-label") { b.check_box(:class=>"form-check-input")}+ b.text[0]%>
                          
                          <br>
                          <%= b.text[1] %>
                          <br>
                          
                        </div>
                      </li>

                      <% end %>
                    </ul>
                  	
                   
                   <% end %>
                    </div>
                  </div>
                
                </div>
          </div>
    <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab" style="width:100%;">
        <div class="container"  >
            <div class="row row-cols-2" >
               <div class="col-4">
                 
                    <%= form_for :search, url:'/playlists/search', method: 'get',local: true do |f|%>
                      <%=f.label :search, 'Search with genres', class:"form-label" %>
                      <br>
                      <%= f.search_field(:genre, :class=>'form-control me-2')%>
                      <%= f.submit 'Search',:class=>'btn btn-outline-success'%>
                    <%end%>  
                
                </div>
               
            </div>
           
              
            </div>
        </div>
      </div>

</div>

